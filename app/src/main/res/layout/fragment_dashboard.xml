<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavFragments.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="680dp"
                app:cardMaxElevation="11dp"
                android:layout_margin="5dp"
                app:cardUseCompatPadding="true"
                >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/etname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etemail"
                    android:layout_marginTop="3dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/supportcall"
                        android:layout_width="165dp"
                        android:layout_weight="2"
                        android:layout_height="125dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Support Call"
                            android:textStyle="bold"
                            android:padding="16dp"
                            android:textSize="16dp"
                            android:layout_gravity="bottom"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="165dp"
                        android:layout_weight="2"
                        android:layout_height="125dp"
                        android:layout_marginRight="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true" >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Preventive Call"
                            android:textStyle="bold"
                            android:padding="16dp"
                            android:textSize="16dp"
                            android:layout_gravity="bottom"/>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="178dp"
                        android:layout_weight="2"
                        android:layout_height="125dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AMCSupport call"
                            android:textStyle="bold"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:layout_gravity="bottom"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="178dp"
                        android:layout_weight="2"
                        android:layout_height="125dp"
                        android:layout_marginRight="2dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true" >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AMC Preventive "
                            android:textStyle="bold"
                            android:padding="16dp"
                            android:textSize="16dp"
                            android:layout_gravity="bottom"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="295dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Paid Support Call"
                            android:textStyle="bold"
                            android:padding="16dp"
                            android:textSize="16dp"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

















                <!--    <ProgressBar-->
<!--        android:id="@+id/progress"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:visibility="gone"-->
<!--        android:layout_gravity="center"/>-->



            </LinearLayout>



            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>